    name = "foo"
    command = "echo 'hello foo'"
    inputs {
      "source.txt"
    }
    dependencies {
      ":bar"
    }
    tags {
      "test-tag"
    }
  }

  new {
    name = "foo_test"
    command = "echo 'hello foo_test'"
    dependencies {
      ":foo"
    }
    platforms {
      "linux/amd64"
    }
  }

  new {
    name = "bar"
    command = "echo 'hello foo'"
    inputs {
      "*.txt"
    }

    platforms {
      "linux/amd64"
    }
  }
}
